{
  "name": "certifikurs-tests",
  "version": "1.0.0",
  "description": "Run unit tests on this project.",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "test:report": "vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\"",
    "fuzz": "npx @stacks/rendezvous . academic-certificates test",
    "fuzz:invariant": "npx @stacks/rendezvous . academic-certificates invariant",
    "fuzz:all": "npm run fuzz && npm run fuzz:invariant"
  
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hirosystems/clarinet-sdk": "^3.6.0",
    "@stacks/rendezvous": "^0.12.0",
    "@stacks/transactions": "^7.3.0",
    "@types/node": "^24.4.0",
    "chokidar-cli": "^3.0.0",
    "vitest": "^3.2.4",
    "vitest-environment-clarinet": "^2.3.0"
  }
}
