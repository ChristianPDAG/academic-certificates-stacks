{
  "name": "certifikurs-tests",
  "version": "1.0.0",
  "description": "Run unit tests on this project.",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "test:report": "vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\"",
    "fuzz:registry": "npx @stacks/rendezvous . registry test",
    "fuzz:registry:invariant": "npx @stacks/rendezvous . registry invariant",
    "fuzz:data": "npx @stacks/rendezvous . certificate-data test",
    "fuzz:data:invariant": "npx @stacks/rendezvous . certificate-data invariant",
    "fuzz:manager": "npx @stacks/rendezvous . certificate-manager-v1 test",
    "fuzz:manager:invariant": "npx @stacks/rendezvous . certificate-manager-v1 invariant",
    "fuzz:all": "npm run fuzz:registry && npm run fuzz:data && npm run fuzz:manager",
    "fuzz:all:invariant": "npm run fuzz:registry:invariant && npm run fuzz:data:invariant && npm run fuzz:manager:invariant",
    "fuzz:complete": "npm run fuzz:all && npm run fuzz:all:invariant"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hirosystems/clarinet-sdk": "^3.6.0",
    "@stacks/rendezvous": "^0.12.0",
    "@stacks/transactions": "^7.3.0",
    "@types/node": "^24.4.0",
    "chokidar-cli": "^3.0.0",
    "vitest": "^3.2.4",
    "vitest-environment-clarinet": "^2.3.0"
  }
}